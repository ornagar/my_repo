import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		VendingMachine v1 = new VendingMachine();
		Scanner sc = new Scanner(System.in);
		v1.connect();
		while (true ) {
			int i = sc.nextInt();
		
		switch (i) {
		case 'c':
			v1.insertCoin(4);
			break;
		}
		
		v1.chooseDrink();
		
		v1.chooseDrink(); 
		v1.insertCoin(4);
		v1.chooseDrink();
		}
		
	}
}
